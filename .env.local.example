# When set to 'true', the app uses mock data instead of live Firebase/Stripe.
# For production, remove this line or set it to 'false'.
NEXT_PUBLIC_MOCK_MODE=true

# Stripe API keys
# Replace with your actual Stripe keys for production.
STRIPE_SECRET_KEY=your_stripe_secret_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here

# Stripe Webhook secret
# Get this from your Stripe dashboard's webhook settings.
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# Firebase Admin SDK credentials
# This is a base64-encoded JSON of your Firebase service account key.
# Use a tool to encode your service account JSON file to a single line.
FIREBASE_ADMIN_SDK_BASE64=your_base64_encoded_firebase_admin_sdk_here
